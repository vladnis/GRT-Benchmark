<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.licenta.grt_benchmark.CreateDatasetActivity$PlaceholderFragment"
    android:orientation="vertical" >
    
    <EditText 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:hint="Dataset name"
    	android:textSize="24sp"
    	android:layout_margin="5dp"
    	android:id="@+id/datasetName" >
    </EditText>    
    
    <EditText 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:hint="Add description"
    	android:textSize="24sp"
    	android:layout_margin="5dp"
    	android:id="@+id/description" >
    	
    </EditText>
    
	<RadioGroup
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_margin="5dp"
	    android:id="@+id/usecase" >
	    <RadioButton android:id="@+id/segmented"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Segmented gestures"
	        android:onClick="onRadioButtonClicked"
	        android:checked="true"  />
	    <RadioButton android:id="@+id/continous"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Continuous gesture"
	        android:onClick="onRadioButtonClicked" />
	</RadioGroup>
    
	<Button 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Save new dataset"
	    android:onClick="saveDataset"
	    android:background="@drawable/button_custom"
	    android:padding="5dp"
	    android:layout_margin="5dp"
	    android:textSize="24sp" />

</LinearLayout>
